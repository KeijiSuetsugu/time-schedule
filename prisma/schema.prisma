// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  role      String   @default("employee") // "employee" or "admin"
  department String? // 部署: "看護師", "クラーク", "放射線科", "リハビリ", "リハ助手", "その他"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  timecards TimeCard[]
  timeCardRequests TimeCardRequest[]
  leaveRequests LeaveRequest[]
}

model TimeCard {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type        String   // "clock_in" or "clock_out"
  timestamp   DateTime @default(now())
  latitude    Float?
  longitude   Float?
  ipAddress   String?
  deviceInfo  String?
  locationId  String?  // 打刻した場所のID
  location    Location? @relation(fields: [locationId], references: [id])
  createdAt   DateTime @default(now())
  
  @@index([userId])
  @@index([timestamp])
}

model Location {
  id          String   @id @default(cuid())
  name        String   // 場所の名前（例: "本社"、"支社"）
  latitude    Float    // 緯度
  longitude   Float    // 経度
  radius      Float    @default(100) // 許可範囲（メートル）
  enabled     Boolean  @default(true) // 有効/無効
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  timecards   TimeCard[]
  
  @@index([enabled])
}

model TimeCardRequest {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  requestType     String   // "clock_in" or "clock_out"
  requestedTime   DateTime // 申請する打刻時刻
  reason          String   // 申請理由
  status          String   @default("pending") // "pending", "approved", "rejected"
  reviewedBy      String?  // 承認/却下した管理者のID
  reviewedAt      DateTime? // 承認/却下日時
  reviewComment   String?  // 管理者のコメント
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

model LeaveRequest {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  leaveType       String   // "年次", "病気", "特別"
  absenceType     String   // "休暇", "欠勤"
  department      String   // 所属部署
  employeeName    String   // 氏名
  reason          String   // 理由
  startDate       DateTime // 開始日時
  endDate         DateTime // 終了日時
  days            Float    // 日数
  hours           Float    // 時間数
  status          String   @default("pending") // "pending", "approved", "rejected"
  reviewedBy      String?  // 承認/却下した管理者のID
  reviewedAt      DateTime? // 承認/却下日時
  reviewComment   String?  // 管理者のコメント
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([userId])
  @@index([status])
  @@index([createdAt])
  @@index([startDate])
}

