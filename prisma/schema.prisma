// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  role      String   @default("employee") // "employee" or "admin"
  department String? // 部署: "医師", "看護師", "クラーク", "放射線科", "リハビリ", "リハ助手", "その他"
  managedDepartment String? // 管理している部署（部署管理者の場合のみ設定、nullの場合は全管理者）
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  timecards TimeCard[]
  timeCardRequests TimeCardRequest[]
  leaveRequests LeaveRequest[]
  overtimeRequests OvertimeRequest[]
  assignedTimeCardRequests TimeCardRequest[] @relation("AssignedTimeCardRequests")
  assignedLeaveRequests LeaveRequest[] @relation("AssignedLeaveRequests")
  assignedOvertimeRequests OvertimeRequest[] @relation("AssignedOvertimeRequests")
}

model TimeCard {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type        String   // "clock_in" or "clock_out"
  timestamp   DateTime @default(now())
  latitude    Float?
  longitude   Float?
  ipAddress   String?
  deviceInfo  String?
  locationId  String?  // 打刻した場所のID
  location    Location? @relation(fields: [locationId], references: [id])
  createdAt   DateTime @default(now())
  
  @@index([userId])
  @@index([timestamp])
}

model Location {
  id          String   @id @default(cuid())
  name        String   // 場所の名前（例: "本社"、"支社"）
  latitude    Decimal  @db.Decimal(18, 15) // 緯度（18桁対応: 整数3桁+小数15桁）
  longitude   Decimal  @db.Decimal(19, 15) // 経度（18桁対応: 整数4桁+小数15桁）
  radius      Float    @default(100) // 許可範囲（メートル）
  enabled     Boolean  @default(true) // 有効/無効
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  timecards   TimeCard[]
  
  @@index([enabled])
}

model TimeCardRequest {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  requestType     String   // "clock_in" or "clock_out"
  requestedTime   DateTime // 申請する打刻時刻
  reason          String   // 申請理由
  status          String   @default("pending") // "pending", "approved", "rejected"
  assignedDepartmentManagerId String? // 割り当てられた部署管理者のID
  assignedDepartmentManager   User?   @relation("AssignedTimeCardRequests", fields: [assignedDepartmentManagerId], references: [id])
  reviewedBy      String?  // 承認/却下した管理者のID
  reviewedAt      DateTime? // 承認/却下日時
  reviewComment   String?  // 管理者のコメント
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([userId])
  @@index([status])
  @@index([createdAt])
  @@index([assignedDepartmentManagerId])
}

model LeaveRequest {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  leaveType       String   // "年次", "病気", "特別"
  absenceType     String   // "休暇", "欠勤"
  department      String   // 所属部署
  employeeName    String   // 氏名
  reason          String   // 理由
  startDate       DateTime // 開始日時
  endDate         DateTime // 終了日時
  days            Float    // 日数
  hours           Float    // 時間数
  status          String   @default("pending") // "pending", "approved", "rejected"
  assignedDepartmentManagerId String? // 割り当てられた部署管理者のID
  assignedDepartmentManager   User?   @relation("AssignedLeaveRequests", fields: [assignedDepartmentManagerId], references: [id])
  reviewedBy      String?  // 承認/却下した管理者のID
  reviewedAt      DateTime? // 承認/却下日時
  reviewComment   String?  // 管理者のコメント
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([userId])
  @@index([status])
  @@index([createdAt])
  @@index([startDate])
  @@index([assignedDepartmentManagerId])
}

model OvertimeRequest {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  department      String   // 所属部署
  employeeName    String   // 氏名
  content         String   // 時間外の内容
  overtimeDate    DateTime // 時間外業務の日付
  startTime       DateTime // 開始時刻
  endTime         DateTime // 終了時刻
  status          String   @default("pending") // "pending", "approved", "rejected"
  assignedDepartmentManagerId String? // 割り当てられた部署管理者のID
  assignedDepartmentManager   User?   @relation("AssignedOvertimeRequests", fields: [assignedDepartmentManagerId], references: [id])
  reviewedBy      String?  // 承認/却下した管理者のID
  reviewedAt      DateTime? // 承認/却下日時
  reviewComment   String?  // 管理者のコメント
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([userId])
  @@index([status])
  @@index([createdAt])
  @@index([overtimeDate])
  @@index([assignedDepartmentManagerId])
}

